#! /usr/bin/env python

import rospy
from visualization_messages import Marker

class MarkerPub():

    def __init__(self):
        rospy.init_node('marker')
        self.pub = rospy.Publisher('/visual_marker', Marker, queue_size=10)

if (__name__=="__main__"):
    marker_pub = MarkerPub()
    marker = Marker()
    marker.pos.position.x = 1
    marker.pos.position.y = 2
    r = rospy.Rate(10)
    while (not rospy.is_shutdown()):
        r.sleep()
        marker_pub.pub.Publish(marker)
